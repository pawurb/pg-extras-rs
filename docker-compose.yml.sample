services:
  postgres12:
    image: postgres:12.20-alpine
    command: postgres -c shared_preload_libraries=pg_stat_statements
    environment:
      POSTGRES_USER: postgres
      POSTGRES_DB: rust-pg-extras-test
      POSTGRES_PASSWORD: secret
